{
    "private": true,
    "type": "module",
    "scripts": {
        "build-plugma": "cd ../../ && nr build",
        "list-dist": "command ls -la dist",
        "dev": "nr build-plugma && plugma dev",
        "build": "nr build-plugma && plugma build",
        "preview": "nr build-plugma && plugma preview",
        "release": "nr build-plugma && plugma release",
        "test": "plugma test",
        "test:dev": "nr build-plugma && (timeout 3s plugma dev --debug); nr list-dist",
        "test:build": "nr build-plugma && plugma build --debug && nr list-dist",
        "test:preview": "nr build-plugma && (timeout 5s plugma preview --debug); nr list-dist",
        "test:release": "nr build-plugma && plugma release --debug && nr list-dist"
    },
    "devDependencies": {
        "@figma/plugin-typings": "^1.100.2",
        "@sveltejs/vite-plugin-svelte": "^4.0.0",
        "@tsconfig/svelte": "^5.0.4",
        "@types/chai": "^5.0.1",
        "plugma": "file:../../",
        "svelte": "^5.1.3",
        "svelte-check": "^4.0.5",
        "tslib": "^2.8.0",
        "typescript": "~5.6.2",
        "vite": "^5.4.10"
    },
    "plugma": {
        "manifest": {
            "id": "plugma-test-sandbox",
            "name": "Plugma Test Sandbox",
            "main": "src/main.ts",
            "ui": "src/ui.ts",
            "editorType": [
                "figma",
                "figjam"
            ],
            "networkAccess": {
                "allowedDomains": [
                    "none"
                ],
                "devAllowedDomains": [
                    "http://localhost:*",
                    "ws://localhost:*"
                ]
            }
        }
    },
    "dependencies": {
        "vitest": "^3.0.2"
    }
}
