{
	"name": "plugma",
	"version": "2.2.0",
	"description": "",
	"main": "index.js",
	"type": "module",
	"bin": {
		"plugma": "./bin/plugma.js"
	},
	"files": [
		"bin",
		"dist",
		"migration",
		"templates",
		"test",
		"versions.json"
	],
	"scripts": {
		"build:apps": "./build/build-all-apps.sh",
		"build:dev-server": "cd apps/dev-server && vite build",
		"build:figma-bridge": "cd apps/figma-bridge && vite build",
		"build:runtime": "cd apps/plugma-runtime && vite build",
		"build:plugma": "./build/header.sh Plugma && tsc -p tsconfig.build.json",
		"build": "nr clean && nr build:apps && nr build:plugma",
		"build:prod": "nr clean && nr build:apps && nr build:plugma",
		"build:watch": "concurrently -c green,blue,yellow,cyan -n plugma,dev-app,bridge,runtime 'nr dev:plugma --watch' 'nr build:dev-server --watch' 'nr build:figma-bridge --watch' 'nr build:runtime --watch'",
		"test-cmd": "nr clean && nr build && cd ../../sandbox && ../packages/plugma/bin/plugma",
		"check": "tsc --noEmit",
		"clean": "rm -rf dist && rm -rf apps/dist",
		"copy-workflows": "cp -r ./templates/github/ .github/",
		"dev:apps": "nr build:dev-server --watch && nr build:figma-bridge --watch",
		"dev:plugma": "tsc -p tsconfig.build.json --watch",
		"dev": "nr clean && concurrently -n apps,plugma 'nr dev:apps' 'nr dev:plugma'",
		"sync-shared": "./scripts/sync-shared.sh",
		"dev:shared": "concurrently -n shared-sync,plugma 'chokidar ../shared/src/**/*.ts -c ./scripts/sync-shared.sh' 'nr dev:plugma'",
		"dev:setup": "node scripts/manage-versions.js dev",
		"lint:fix": "biome check --fix .",
		"lint:unsafe-fix": "biome check --unsafe-fix .",
		"lint": "biome check .",
		"prepack": "npm run sync-shared",
		"prepublishOnly": "node scripts/manage-versions.js publish && nr build:prod",
		"test:coverage": "vitest --run --coverage",
		"test:watch": "vitest",
		"test": "vitest run",
		"start:websocket-server": "tsx src/tasks/server/websocket.ts",
		"version": "node scripts/bump-plugma-version.js"
	},
	"exports": {
		"./utils": {
			"import": "./dist/testing/utils/index.js",
			"types": "./dist/testing/utils/index.d.ts"
		},
		".": {
			"browser": "./dist/client.js",
			"node": "./dist/server.js",
			"default": "./dist/client.js"
		},
		"./server": "./dist/core/websockets/server.js",
		"./client": "./dist/core/websockets/client.js",
		"./vitest": "./dist/testing/vitest/index.js",
		"./playwright": "./dist/testing/playwright/index.js"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"chalk": "^5.4.1",
		"chokidar": "^4.0.3",
		"commander": "^12.1.0",
		"cross-dirname": "^0.1.0",
		"debug": "^4.4.0",
		"dotenv": "^16.5.0",
		"glob": "^11.0.1",
		"listr2": "^8.3.3",
		"nanoid": "^5.1.5",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"source-map": "^0.7.4",
		"uuid": "^11.1.0",
		"vite-plugin-singlefile": "^2.3.0",
		"vitest": "^4.0.0",
		"ws": "^8.18.1",
        "jiti": "^2.6.1"
	},
	"devDependencies": {
		"@antfu/ni": "^23.2.0",
		"@figma/plugin-typings": "^1.107.0-beta.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/debug": "^4.1.12",
		"@types/ejs": "^3.1.5",
		"@types/node": "^22.12.0",
		"@types/ws": "^8.5.13",
		"@vitest/ui": "^3.0.4",
		"biome": "^0.3.3",
		"chokidar": "^4.0.3",
		"concurrently": "^9.1.2",
		"rollup": "^4.50.2",
		"svelte": "^5.0.5",
		"terser": "^5.37.0",
		"type-fest": "^4.33.0",
		"typescript": "^5.7.3",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"peerDependencies": {
		"@playwright/test": "^1.51.1",
		"vite": "^7.0.0"
	},
	"peerDependenciesMeta": {
		"@playwright/test": {
			"optional": true
		}
	},
	"gitHead": "5d408156f91d2857618ec7fa647b7d3848c17114"
}
