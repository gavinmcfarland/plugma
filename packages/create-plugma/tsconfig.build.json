{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "bundler",
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": "src",
		"declaration": true,
		"sourceMap": true,
		"sourceRoot": "src"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": [
		"archive",
		"dist",
		"node_modules",
		"test",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/__tests__/**",
		"templates"
	]
}
