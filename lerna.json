{
	"$schema": "node_modules/lerna/schemas/lerna-schema.json",
	"version": "independent",
	"npmClient": "pnpm",
	"command": {
		"publish": {
			"ignoreChanges": ["**/*.md"],
			"message": "chore(release): publish",
			"push": false
		},
		"version": {
			"allowBranch": ["main", "master", "next", "next-new-cli"],
			"message": "chore(release): version %s",
			"push": false
		}
	}
}
